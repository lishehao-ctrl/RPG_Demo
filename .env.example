ENV=dev
DATABASE_URL=sqlite:///./app.db

# LLM minimal config (only 3 keys required)
# - when LLM_API_KEY is empty: backend runs in fake mode automatically
# - when LLM_API_KEY is set: backend calls real chat/completions
LLM_BASE_URL=https://dashscope-us.aliyuncs.com/compatible-mode/v1
LLM_MODEL=qwen-flash-us
LLM_API_KEY=your_api_key_here

# Runtime tuning (optional)
STORY_INPUT_MAX_CHARS=512
STORY_MAPPING_CONFIDENCE_HIGH=0.65
STORY_MAPPING_CONFIDENCE_LOW=0.45
STORY_FALLBACK_GUARD_DEFAULT_MAX_CONSECUTIVE=3
STORY_NARRATION_LANGUAGE=English

# Optional API token guards (empty = disabled)
AUTHOR_API_TOKEN=
PLAYER_API_TOKEN=
